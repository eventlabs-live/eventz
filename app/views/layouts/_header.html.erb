<header>
  <nav>
    <%= link_to image_tag("logo.png"), root_path%>
    <ul class="left">
      <li>
        <%= nav_link_to "Upcoming", events_path %>
      </li>
      <li>
        <%= nav_link_to "Past", filtered_events_path(:past)  %>
      </li>
      <li>
        <%= nav_link_to "Free", filtered_events_path(:free) %>
      </li>
      <li>
        <%= nav_link_to "Recent", filtered_events_path(:recent) %>
      </li>
    </ul>
    <ul class="right">
      <% if current_user %>
        <li>
          <%= link_to current_user.name.capitalize, current_user %>
        </li>
        <li>
          <%= link_to "Account Settings", edit_user_path(current_user) %>
        </li>
        <li>
          <%= link_to "Sign Out", session_path, data: { turbo_method: :delete}, class: "button"  %>
        </li>
      <% else %>
        <li>
          <%= link_to "Sign In", new_session_path, class: "button" %>
        </li>
        <li>
          <%= link_to "Sign Up", signup_path, class: "button" %>
        </li>
      <% end %>
    </ul>
  </nav>

</header>