<h1>Registration for <%= link_to @event.name, @event %></h1>

<%= form_with(model: [@event,@registration]) do |f| %>

  <%= render "shared/errors", object: @registration %>

  <%= f.label :how_heard, 'How did you hear about us dave' %>
  <%= f.select :how_heard, Registration::HOW_HEARD_OPTION,
                            prompt: "Pick one"%>

  <%= f.submit %>
<% end %>
